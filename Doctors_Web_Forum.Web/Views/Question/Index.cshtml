<div class="container my-5">
    <!-- Form tìm kiếm -->
    <form method="get" action="/Question/Index" class="mb-4">
        <div class="input-group search-group">
            <input type="text"
                   class="form-control search-input"
                   name="searchTerm"
                   value="@ViewBag.SearchTerm"
                   placeholder="Tìm kiếm câu hỏi..." />
            <input type="hidden" name="topicId" value="@ViewBag.TopicId" />
            <button type="submit" class="btn btn-primary search-btn">Tìm kiếm</button>
        </div>
    </form>

    <!-- Form thêm câu hỏi -->
    <form method="post" action="/Question/Create" class="mb-5 p-4 border rounded shadow-sm">
        <h5 class="mb-3">Thêm Câu Hỏi Mới</h5>
        <div class="form-group mb-3">
            <label for="title">Tiêu đề câu hỏi</label>
            <br />
            <input type="text" class="form-control" id="title" name="Title" placeholder="Nhập tiêu đề câu hỏi" required>
        </div>
        <div class="form-group mb-3">
            <label for="description">Mô tả</label>
            <br />
            <textarea class="form-control" id="description" name="Description" rows="3" placeholder="Nhập mô tả câu hỏi" required></textarea>
        </div>
        <button type="submit" class="btn btn-success">Gửi Câu Hỏi</button>
    </form>

    <!-- Hiển thị danh sách câu hỏi -->
    <div class="row">
        @foreach (var question in Model)
        {
            <div class="question-card border p-4 mb-4 rounded shadow-sm">
                <div class="mb-2">
                    <strong>Chủ đề:</strong>
                    <span class="badge bg-secondary">@question.Topic?.TopicName</span> <!-- Hiển thị tên chủ đề -->
                </div>
                <hr />
                <div>
                    <strong>Nội dung:</strong> @question.QuestionText
                </div>
                <div>
                    <strong>Mô tả:</strong> @Html.Raw(@question.Description?.Length > 100 ? @question.Description.Substring(0, 100) + "..." : @question.Description)
                </div>
                <a href="/Question/Details/@question.Id" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
            </div>
        }
    </div>

    <!-- Phân trang -->
    <nav>
        <ul class="pagination justify-content-center mt-4">
            @for (int i = 1; i <= ViewBag.Pager.TotalPages; i++)
            {
                <li class="page-item @(i == ViewBag.Pager.CurrentPage ? "active" : "")">
                    <a class="page-link" href="/Question/Index?topicId=@ViewBag.TopicId&pg=@i">@i</a>
                </li>
            }
        </ul>
    </nav>
</div>

<style>
