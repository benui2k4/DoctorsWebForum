        }

            /* Badge màu xám */
            .question-card .badge.bg-secondary {
                background-color: #6c757d;
                color: #fff;
            }

    /* Phân trang */
    .pagination {
        margin-top: 30px;
    }

        .pagination .page-link {
            color: #007bff;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
            transition: all 0.3s ease;
        }

            .pagination .page-link:hover {
                background-color: #007bff;
                color: #fff;
            }

        .pagination .page-item.active .page-link {
            background-color: #007bff;
            color: #fff;
            border-color: #007bff;
            font-weight: bold;
        }
</style>